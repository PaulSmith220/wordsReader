{
  "name": "wordsReader",
  "version": "1.0.0",
  "main": "main.js",
  "license": "MIT",
  "scripts": {
    "pack": "electron-builder --dir",
    "dist": "npm run clean && webpack -p && electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "clean": "rimraf build",
    "dev": "npm run clean && webpack",
    "prod": "npm run clean && webpack -p",
    "start": "electron build/main.js"
  },
  "build": {
    "asar": false,
    "extends": null,
    "extraMetadata": {
      "main": "build/main.js"
    },
    "appId": "com.example.wordsReader",
    "mac": {
      "category": "education",
      "icon": "./icon.png",
      "target": ["dmg"]
    },
    "files": [
      "*.js",
  "build",
  "node_modules"
    ],
    "publish": null
  },
  "devDependencies": {
    "@babel/core": "^7.9.6",
    "@babel/plugin-transform-runtime": "^7.9.6",
    "@babel/polyfill": "^7.8.7",
    "@babel/preset-env": "^7.9.6",
    "babel-core": "^6.26.3",
    "babel-loader": "^8.1.0",
    "css-loader": "^3.5.3",
    "electron": "^9.0.0",
    "electron-builder": "^22.6.1",
    "file-loader": "^6.0.0",
    "html-inline-css-webpack-plugin": "^1.8.0",
    "html-webpack-plugin": "^4.3.0",
    "mini-css-extract-plugin": "^0.9.0",
    "rimraf": "^3.0.2",
    "style-loader": "^1.2.1",
    "uglifyjs-webpack-plugin": "^2.2.0",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-merge": "^4.2.2"
  },
  "dependencies": {
    "dialogs": "^2.0.1"
  }
}
